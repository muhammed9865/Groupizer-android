<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/interest_checkbox"
            android:layout_width="@dimen/choice_circle_width"
            android:layout_height="@dimen/choice_circle_height"
            android:background="@drawable/interest_circle_background"
            android:button="@null"
            android:fontFamily="@font/sego"
            android:checked="false"
            android:gravity="center"
            android:textColor="@color/pink"
            android:textSize="@dimen/choice_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="test" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>